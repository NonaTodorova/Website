<!DOCTYPE html>
<html lang="en">

<!-- EJS HEAD LINK -->
<% include ../partials/head %>


  <body>

    <!-- TOP NAV BAR -->
    <nav class="navbar navbar-light navbar-expand-md fixed-top bg-light" id="navbar" style="font-size:16px;height:67px;">
      <!-- LOGO -->
      <div class="container-fluid"><a class="navbar-brand" href="/profilePage" style="font-size:40px;"><strong><em>Fridge</em></strong><em>Advisor</em></a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
        <!-- Welcome Message and LOGOUT -->
        <div class="collapse navbar-collapse" id="navcol-1">
          <ul class="nav navbar-nav ml-auto" style="margin:-12px;">
            <li class="nav-item" role="presentation"><a class="nav-link active" style="font-size:20px;">Hello <%= user.name%></a></li>
            <li class="nav-item" role="presentation"><a class="nav-link text-success active" href="/" action="/logout" style="font-size:20px;">Logout</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- TAB BAR -->
    <ul class="nav nav-tabs nav-fill" id="tabbedNav">
      <li class="nav-item"><a class="nav-link active" href="/profilePage" id="profileTab" style="font-size:30px;color:#60c52f;">Profile</a></li>
      <li class="nav-item"><a class="nav-link" href="/fridge" id="fridgeTab" style="font-size:30px;">Fridge</a></li>
    </ul>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>



<!-- Video container -->
<div id="scanner-container"></div>

<!-- video container end -->



    <!-- Fridge Items Table -->
    <div class="container">
      <div class="row">

        <div class="col-md-10 col-md-offset-1">

          <div class="panel panel-default panel-table">
            <div class="panel-heading">
              <div class="row">
                <div class="col col-xs-6">
                  <h3 class="panel-title">My Fridge Items</h3>
                </div>
                <div class="col col-xs-6 text-right">
                  <button type="button" id="btnScan" value="Start/Stop the scanner" class="btn btn-sm btn-primary btn-create">Scan Item</button>
                </div>
              </div>
            </div>
            <div class="panel-body">
              <table class="table table-striped table-bordered table-list" id = "updated_table">
                <thead>
                  <tr>
                    <th><em class="fa fa-cog"></em></th>
                    <th class="hidden-xs">ID</th>
                    <th>Product Name</th>
                    <th>Expiry Date</th>
                  </tr>
                </thead>
                 <% for(var i=0, j=i+1; i<user.items.length; i++, j++) { %>
                   <tbody>
                   <tr>
                   <td align="center">
                     <a class="btn btn-danger" id="<%=user.items[i].item%>+i"><em class="fa fa-trash"></em></a>
                   </td>
                   <td class="hidden-xs"> <%=j%> </td>
                     <td> <%=user.items[i].item%> </td>
                       <!-- <td align="center">
                       <!-<button type="button" class="btn btn-info" id="<%=user.items[i].desc%>" >Add Date</button> -->



                     <td align="center"><%=user.items[i].date%></td>



                      </tr>
                  </tbody>
                   <%} %>

              </table>

            </div>


          </div>

        </div>
      </div>
    </div>

    <!-- EJS FOOTER LINK -->
    <% include ../partials/footer %>

      <script src="assets/js/jquery.min.js"></script>
      <script src="assets/bootstrap/js/bootstrap.min.js"></script>
      <script src="assets/js/fridgePage.js"></script>
      <script src="assets/js/quagga.min.js"></script>

  </body>

</html>
